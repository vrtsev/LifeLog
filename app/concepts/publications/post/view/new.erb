<%# its view of a widget\cell  %>

<%= form_for @model, url: posts_path, method: :post do |f| %>
  <div class="box">

    <!-- Error messages -->
    

    <!-- title header -->
    <div class="box-header dker">
        <%= f.text_field :title, class: "form-control", placeholder: "Заголовок записи" %>
    </div>

    <div class="box-body">
      <div class="form-group row">
        <div class="col-sm-12">
          <%= f.text_area :content, html: { rows: '10' }, class: "form-control ckeditor", ckeditor: { toolbar: 'mini' } %>
        </div>
      </div>

      <div class="dropdown-divider"></div>

      <div class="post-footer">
        <div class="form-group">
          <%= f.text_field :all_tags, class: "form-control", placeholder: "Теги" %>
        </div>

        <div class="form-group">
        </div>

        <div class="form-group text-center">
          <label class="md-switch">
            <%= f.check_box :pinned %>
            <i class="green"></i>
            Закрепить
          </label>
        
          <label class="md-switch">
            <%= f.check_box :visible %>
            <i class="green"></i>
            Показывать всем
          </label>

          <label class="md-switch">
            <%= f.check_box :commentable %>
            <i class="green"></i>
            Комментарии
          </label>
        </div>

      </div>
    </div>

    <div class="box-body dker clearfix">
      <div class="form-action-buttons pull-right">
        <%= f.submit 'Сохранить', class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
