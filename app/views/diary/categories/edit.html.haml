%h1 Editing DIARY category

= form_for :category, url: diary_category_path(@category), method: :patch do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :color
    = f.number_field :color
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :type
    = f.text_field :type
  .actions
    = f.submit 'Save'


= link_to 'Show', diary_category_path(@category)
\|
= link_to 'Back', diary_posts_path
