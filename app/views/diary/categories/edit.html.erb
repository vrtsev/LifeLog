<%= form_for :category, url: diary_category_path(@category), method: :patch do |f| %>
  <div class="box m-t">
    <div class="box-header category-background-<%= @category.color %>">
      <h3><%= f.text_field :title, class: 'form-control', placeholder: 'Название категории' %></h3>
    </div>
    
    <div class="box-body clear">
      <div class="form-group">
        <%= f.text_area :description, class: 'form-control', placeholder: 'Краткое описание', rows: '3' %>
      </div>

      <div class="form-group">
        <%= f.select :color, Publication::Category.colors.keys.map { |c| [c.humanize, c] }, { prompt: 'Выберите цвет' }, class: "form-control c-select" %>
      </div>
      
      <div class="form-action-buttons pull-right">
        <%= link_to 'Назад', :back, class: 'btn btn-default' %>
        <%= f.submit 'Сохранить', class: 'btn green' %>
      </div>
    </div>
  </div>
<% end %>

<div class="p-x">
  <%= render template: 'diary/posts/index' %>
</div>