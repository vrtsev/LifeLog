%h4 Вход в персональный аккаунт

= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'ui large form' } do |f|
  .ui.stacked.segment
    .field
      .ui.left.icon.input
        %i.user.icon
        = f.email_field :email, placeholder: 'Электронная почта', autofocus: true
    .field
      .ui.left.icon.input
        %i.lock.icon
        = f.password_field :password, placeholder: 'Пароль'

    - if devise_mapping.rememberable?
      .checkbox.field
        .ui.checkbox
          = f.check_box :remember_me
          = f.label :remember_me, 'Запомнить меня'

    .actions
      = f.submit "Вход", class: 'ui fluid large teal submit button'

  .additional.links
    %p= link_to 'Забыли пароль?', new_password_path(resource_name)
    %p== Вы еще не зарегистрированы? #{link_to 'Зарегистрироваться', new_registration_path(resource_name)}
      
