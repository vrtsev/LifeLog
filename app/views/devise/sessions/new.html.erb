<%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'ui large form' } do |f| %>
  <div class="p-a-md box-color r box-shadow-z1 text-color m-a">
    <div class="m-b text-sm text-center">
      Вход в персональный аккаунт
    </div>

    <form name="form">
      <div class="md-form-group float-label">
        <%= f.email_field :email, class: 'md-input', autofocus: true %>
        <label>Email</label>
      </div>
      <div class="md-form-group float-label">
        <%= f.password_field :password, class: 'md-input' %>
        <label>Пароль</label>
      </div>      
      <div class="m-b-md">        
        <label class="md-check">
          <%= f.check_box :remember_me %><i class="primary"></i> Запомнить меня
        </label>
      </div>

      <div class="text-center">
        <%= f.submit "Вход", class: 'btn primary btn-block p-x-md' %>
        <%= link_to "Отмена", root_path, class: 'btn default btn-block p-x-md' %>
        <hr>
        <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-block btn-danger' do %>
          <i class="fa fa-google-plus m-r"></i> Войти через Google
        <% end %>
      </div>
    </form>
  </div>
<% end %>

<div class="p-v-lg text-center">
  <div class="m-b"><%= link_to 'Забыли пароль?', new_password_path(resource_name), class: 'text-primary _600' %></div>
  <div>Вы еще не зарегистрированы? <%= link_to 'Зарегистрироваться', new_registration_path(resource_name), class: 'text-primary _600' %></div>
</div>
