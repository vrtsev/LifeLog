<div class="navbar">
  <div class="container">
    <a data-toggle="collapse" data-target="#navbar-1" class="navbar-item pull-right hidden-md-up m-a-0 m-l">
      <i class="material-icons">&#xe5d2;</i>
    </a>
    <%= link_to root_path, class: 'navbar-brand' do %>
      <span class="hidden-folded inline">LifeLog</span>
    <% end %>

    <!-- navbar right -->
    <ul class="nav navbar-nav pull-right m-l">
      <li class="nav-item dropdown">
        <a href class="nav-link dropdown-toggle clear" data-toggle="dropdown">
          <span class="avatar w-32">
            <%= render_photo_of(current_user) %>
            <i class="on b-white bottom"></i>
          </span>
          <span class="hidden-sm-down _500"><%= current_user.name %></span>
        </a>

        <!-- User dropdown -->
        <div class="dropdown-menu pull-right dropdown-menu-scale">
          <a class="dropdown-item" ui-sref="app.page.setting">
            <span>Настройки</span>
            <!-- <span class="label primary m-l-xs">3/9</span> -->
          </a>
          <%= link_to 'Выход', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>

    <!-- navbar collapse -->
    <div class="collapse navbar-toggleable-sm" id="navbar-1">
      <ul class="nav navbar-nav nav-active-border b-{{app.setting.theme.primary}}">
        <li class="nav-item">
          <%= link_to posts_path, class: 'nav-link' do %>
            <span class="nav-text">Публикации</span>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to diary_posts_path, class: 'nav-link' do %>
            <span class="nav-text">Дневник</span>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to objectives_goals_path, class: 'nav-link' do %>
            <span class="nav-text">Цели и задачи</span>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to '#', class: 'nav-link' do %>
            <span class="nav-text">Пользователи</span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
