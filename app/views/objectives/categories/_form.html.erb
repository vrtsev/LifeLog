<%= form_for object, url: url, method: method do |f| %>
  <div class="box-body">
    <div class="form-group">
      <%= f.text_field :title, placeholder: 'Название категории', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.select :color, Category.colors.keys.map { |c| [c.humanize, c] }, { prompt: 'Выберите цвет' }, class: "form-control c-select" %>
    </div>
  </div>
  
  <div class="box-body dker clearfix">
    <div class="form-action-buttons pull-right">
      <%= link_to 'Назад', :back, class: 'btn btn-default' %>
      <%= f.submit 'Сохранить', class: 'btn green' %>
    </div>
  </div>
<% end %>
