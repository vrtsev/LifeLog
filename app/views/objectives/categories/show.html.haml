%p#notice= notice

%p
  %b Title:
  = @category.title
%p
  %b Description:
  = @category.description
%p
  %b Color:
  = @category.color
%p
  %b User:
  = @category.user_id
%p
  %b Type:
  = @category.type

= link_to 'Edit', edit_objectives_category_path(@category)
\|
= link_to 'Back', objectives_goals_path


%h1 GOALS in category

%table
  %thead
    %tr
      %th Title
      %th Description
      %th Status
      %th Progress
      %th Start date
      %th End date
      %th Parent
      %th User
      %th
      %th
      %th

  %tbody
    - @goals.each do |goal|
      %tr
        %td= goal.title
        %td= goal.description
        %td= goal.status
        %td= goal.progress
        %td= goal.start_date
        %td= goal.end_date
        %td= goal.parent_id
        %td= goal.user_id
        %td= link_to 'Show goal', objectives_goal_path(goal)
        %td= link_to 'Edit goal', edit_objectives_goal_path(goal)
        %td= link_to 'Destroy goal', objectives_goal_path(goal), method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New goal', new_objectives_goal_path