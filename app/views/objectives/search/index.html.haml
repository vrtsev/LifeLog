%h1 GOALS Search
%b= "Query: #{params[:query]}"
%br= link_to 'К целям', objectives_goals_path
%hr


%h3 Tags
-if @tags.present?

  - @tags.each do |tag|
    %b= link_to tag.name, objectives_tag_path(tag.name)
%hr



%h3 Goals
-if @goals.present?
  %table
    %thead
      %tr
        %th Title
        %th Description
        %th Status
        %th Progress
        %th Start date
        %th End date
        %th Category
        %th Parent
        %th User
        %th
        %th
        %th

    %tbody
      - @goals.each do |goal|
        %tr
          %td= goal.title
          %td= goal.description
          %td= goal.status
          %td= goal.progress
          %td= goal.start_date
          %td= goal.end_date
          %td= goal.category_id
          %td= goal.parent_id
          %td= goal.user_id
          %td= link_to 'Show goal', objectives_goal_path(goal)
          %td= link_to 'Edit goal', edit_objectives_goal_path(goal)
          %td= link_to 'Destroy goal', objectives_goal_path(goal), method: :delete, data: { confirm: 'Are you sure?' }
%hr



%h3 Tasks
-if @tasks.present?
  %table
    %thead
      %tr
        %th Title
        %th Status
        %th User
        %th Goal
        %th Parent
        %th 
        %th
        %th
    %tbody
      - @tasks.each do |task|
        %tr
          %td= task.title
          %td= task.status
          %td= task.user_id
          %td= task.goal_id
          %td= task.parent_id
%hr
