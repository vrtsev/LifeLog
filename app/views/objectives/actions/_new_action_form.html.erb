<div id='new-comment-box' class="box">
  <div class="box-header comment-box-header">
    <textarea rows='1' id='new-comment-area' class="comment-action-btn form-control new-comment-input" placeholder='Ваши действия по достижению цели...'></textarea>
  </div>
</div>

<div id='new-comment-form' class="box hidden">
  <%= form_for object, url: url, method: method do |f| %>
    <div class="box-header p-a-sm">
        <%= f.cktext_area :content, rows: 1, class: 'form-control new-comment-input', placeholder: 'Ваши действия по достижению цели...' %>
    </div>

    <div class="box-footer dker clearfix">
      <span class="avatar w-32">
        <%= image_tag(current_user.photo_url, class: 'img-circle') %>
        <i class="on b-white bottom"></i>
        &nbsp;<%= current_user.name %>
      </span>

      <div class="form-action-buttons pull-right">
        <%= link_to 'Отмена', '#', id: 'comment-cancel-btn', class: "comment-action-btn btn btn-sm btn-default" %>
        <%= f.submit 'Отправить', class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  <% end %>
</div>

