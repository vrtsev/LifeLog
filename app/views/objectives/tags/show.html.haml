%h1= "Goals with tag (#{@tag.name})"

%table
  %thead
    %tr
      %th Title
      %th Description
      %th Status
      %th Progress
      %th Start date
      %th End date
      %th Category
      %th Parent
      %th User
      %th
      %th
      %th

  %tbody
    - @goals.each do |goal|
      %tr
        %td= goal.title
        %td= goal.description
        %td= goal.status
        %td= goal.progress
        %td= goal.start_date
        %td= goal.end_date
        %td= goal.category_id
        %td= goal.parent_id
        %td= goal.user_id
        %td= link_to 'Show goal', objectives_goal_path(goal)
        %td= link_to 'Edit goal', edit_objectives_goal_path(goal)
        %td= link_to 'Destroy goal', objectives_goal_path(goal), method: :delete, data: { confirm: 'Are you sure?' }

%br
